<?xml version="1.0" encoding="utf-8"?>
<Stylesheet TextureRegionAtlas="default_ui_skin_atlas.xml">
  <Colors>
    <Color Id="white" Value="#FFFFFF" />
    <Color Id="grey" Value="#AAAAAA" />
    <Color Id="red" Value="#FF0000" />
  </Colors>
  <Fonts>
    <Font Id="default-font" File="default_font.fnt"/>
    <Font Id="default-font-small" File="default_font_small.fnt"/>
  </Fonts>
  <LabelStyles>
    <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" />
  </LabelStyles>
  <TextBoxStyles>
    <TextBoxStyle Background="textfield" TextColor="white" DisabledTextColor="grey" Font="default-font" Cursor="cursor" Selection="selection" Width="100" />
  </TextBoxStyles>
  <ScrollViewerStyles>
    <ScrollViewerStyle HorizontalScrollBackground="scroll-horizontal" HorizontalScrollKnob="scroll-knob-horizontal" VerticalScrollBackground="scroll" VerticalScrollKnob="scroll-knob-vertical" />
  </ScrollViewerStyles>
  <ButtonStyles>
    <ButtonStyle Background="button" OverBackground="button-over" PressedBackground="button-down" />
    <ButtonStyle Id="blue" Background="button-blue" OverBackground="button-blue-down" PressedBackground="button-blue-down" />
  </ButtonStyles>
  <CheckBoxStyles>
    <CheckBoxStyle>
      <LabelStyle Font="default-font" TextColor="white" />
      <ImageStyle Background="vis-check" OverBackground="vis-check-over" PressedImage="vis-check-tick" />
    </CheckBoxStyle>
  </CheckBoxStyles>
  <RadioButtonStyles>
    <RadioButtonStyle>
      <LabelStyle Font="default-font" TextColor="white" />
      <ImageStyle Image="vis-radio-tick-disabled" PressedImage="vis-radio-tick" />
    </RadioButtonStyle>
  </RadioButtonStyles>
  <SpinButtonStyles>
    <SpinButtonStyle Background="textfield">
      <TextBoxStyle TextColor="white" DisabledTextColor="grey" Font="default-font" Cursor="cursor" Selection="selection" />
      <UpButtonStyle Width="12" Height="12" Background="button" OverBackground="button-over" PressedBackground="button-down">
        <ImageStyle Image="select-up" />
      </UpButtonStyle>
      <DownButtonStyle Width="12" Height="12" Background="button" OverBackground="button-over" PressedBackground="button-down">
        <ImageStyle Image="select-down" />
      </DownButtonStyle>
    </SpinButtonStyle>
  </SpinButtonStyles>
  <HorizontalSliderStyles>
    <HorizontalSliderStyle Background="slider">
      <KnobStyle>
        <ImageStyle Image="slider-knob" OverImage="slider-knob-over" PressedImage="slider-knob-down" />
      </KnobStyle>
    </HorizontalSliderStyle>
  </HorizontalSliderStyles>
  <VerticalSliderStyles>
    <VerticalSliderStyle Background="slider-vertical">
      <KnobStyle>
        <ImageStyle Image="slider-knob" OverImage="slider-knob-over" PressedImage="slider-knob-down" />
      </KnobStyle>
    </VerticalSliderStyle>
  </VerticalSliderStyles>
  <HorizontalProgressBarStyles>
    <HorizontalProgressBarStyle Background="progressbar" Filler="progressbar-filled" />
  </HorizontalProgressBarStyles>
  <VerticalProgressBarStyles>
    <VerticalProgressBarStyle Background="progressbar-vertical" Filler="progressbar-filled-vertical" />
  </VerticalProgressBarStyles>
  <HorizontalSeparatorStyles>
    <HorizontalSeparatorStyle Image="separator-menu" Thickness="4" />
  </HorizontalSeparatorStyles>
  <VerticalSeparatorStyles>
    <VerticalSeparatorStyle Image="separator" Thickness="3" />
  </VerticalSeparatorStyles>
  <ComboBoxStyles>
    <ComboBoxStyle Background="default-select">
      <LabelStyle Font="default-font" TextColor="white" />
      <ListBoxStyle Background="select-box-list-bg">
        <ListItemStyle OverBackground="button-over" PressedBackground="button-down">
          <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" />
        </ListItemStyle>
        <SeparatorStyle PaddingTop="2" PaddingBottom="2" Image="separator-menu" Thickness="4" />
      </ListBoxStyle>
    </ComboBoxStyle>
  </ComboBoxStyles>
  <ListBoxStyles>
    <ListBoxStyle Background="button">
      <ListItemStyle OverBackground="button-over" PaddingLeft="5" PaddingRight="5" PressedBackground="list-selection">
        <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" />
      </ListItemStyle>
      <SeparatorStyle PaddingTop="2" PaddingBottom="2" Image="separator-menu" Thickness="4" />
    </ListBoxStyle>
  </ListBoxStyles>
  <TabControlStyles>
    <TabControlStyle ButtonSpacing="0">
      <TabItemStyle OverBackground="button-over" PaddingLeft="5" PaddingRight="5" PressedBackground="list-selection">
        <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" />
      </TabItemStyle>
      <ContentStyle Background="window" PaddingLeft="5" PaddingRight="5" PaddingTop="5" PaddingBottom="5" />
    </TabControlStyle>
  </TabControlStyles>
  <TreeStyles>
    <TreeStyle SelectionBackground="tree-selection" SelectionHoverBackground="button-over">
      <MarkStyle>
        <ImageStyle Image="tree-plus" PressedImage="tree-minus" />
      </MarkStyle>
      <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" />
    </TreeStyle>
  </TreeStyles>
  <HorizontalSplitPaneStyles>
    <HorizontalSplitPaneStyle>
      <HandleStyle Background="splitpane" OverBackground="splitpane-over" />
    </HorizontalSplitPaneStyle>
  </HorizontalSplitPaneStyles>
  <VerticalSplitPaneStyles>
    <VerticalSplitPaneStyle>
      <HandleStyle Background="splitpane-vertical" OverBackground="splitpane-vertical-over" />
    </VerticalSplitPaneStyle>
  </VerticalSplitPaneStyles>
  <HorizontalMenuStyles>
    <HorizontalMenuStyle Background="button" SelectionHoverBackground="button-over" SelectionBackground="button-down" SpecialCharColor="red">
      <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" PaddingLeft="10" PaddingRight="10" />
      <SeparatorStyle Image="separator" Thickness="3" />
    </HorizontalMenuStyle>
  </HorizontalMenuStyles>
  <VerticalMenuStyles>
    <VerticalMenuStyle Background="button" SelectionHoverBackground="button-over" SelectionBackground="button-down" SpecialCharColor="red">
      <ImageStyle PaddingLeft="10" />
      <LabelStyle Font="default-font" TextColor="white" DisabledTextColor="grey" PaddingLeft="10" PaddingRight="10" />
      <ShortcutStyle Font="default-font" TextColor="white" DisabledTextColor="grey" PaddingRight="10" />
      <SeparatorStyle PaddingTop="2" PaddingBottom="2" Image="separator-menu" Thickness="4" />
    </VerticalMenuStyle>
  </VerticalMenuStyles>
  <WindowStyles>
    <WindowStyle Background="window" PaddingLeft="5" PaddingRight="5" PaddingTop="5" PaddingBottom="5">
      <TitleStyle Font="default-font" TextColor="white" />
      <CloseButtonStyle OverBackground="button-over" PaddingLeft="5" PaddingRight="5" PaddingTop="5" PaddingBottom="5" PressedBackground="button-red">
        <ImageStyle Image="icon-close" />
      </CloseButtonStyle>
    </WindowStyle>
  </WindowStyles>
  <DialogStyles>
    <DialogStyle Background="window" PaddingLeft="5" PaddingRight="5" PaddingTop="5" PaddingBottom="5">
      <TitleStyle Font="default-font" TextColor="white" />
      <CloseButtonStyle OverBackground="button-over" PaddingLeft="5" PaddingRight="5" PaddingTop="5" PaddingBottom="5" PressedBackground="button-red">
        <ImageStyle Image="icon-close" />
      </CloseButtonStyle>
    </DialogStyle>
  </DialogStyles>
</Stylesheet>